@page
@model UtilitiesProject.Pages.Bills.AddModel
@{
    var message = ViewData["Message"]?.ToString();
    var selectListItems = new List<SelectListItem>();
}
<form method="post">
    <h1 class="mb-3">Add New Bill</h1>
    @if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success" role="alert">
            @message
        </div>
    }
    <select name="name" asp-items="Model.options" asp-for="AddUtilityRequest.Name"></select>
    <div class="mb-3">
        <label class="form-label">Amount</label>
        <input type="text" class="form-control" asp-for="AddBillRequest.Amount" />
    </div>
    <div class="mb-3">
        <label class="form-label">Paid</label>
        <input type="text" class="form-control" asp-for="AddBillRequest.Paid" />
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>