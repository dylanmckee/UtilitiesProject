@page "{id:Guid}"
@model UtilitiesProject.Pages.Bills.EditModel
@{
    var message = ViewData["Message"]?.ToString();

}
<form method="post">
    <h1 class="mb-3">Edit Bill</h1>
    @if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success" role="alert">
            @message
        </div>
    }
    <div class="mb-3">
        <label class="form-label">Name</label>

    </div>
    <div class="mb-3">
        <label class="form-label">Name</label>
            <select name="name" asp-items="Model.options" asp-for="AddUtilityRequest.Name"></select>

        <!--<input type="text" class="form-control" asp-for="EditUtilityViewModel.Name" />-->
    </div>
    <div class="mb-3">
        <label class="form-label">Amount</label>
        <input type="text" class="form-control" asp-for="EditBillViewModel.Amount" />
    </div>
    <div class="mb-3">
        <label class="form-label">Paid</label>
        <input type="text" class="form-control" asp-for="EditBillViewModel.Paid" />
    </div>
    <div class="mb-3 d-flex justify-content-between">
        <button type="submit" class="btn btn-primary" asp-page-handler="Update">
            Update
        </button>
        <button type="submit" class="btn btn-danger" asp-page-handler="Delete">
            Delete
        </button>
    </div>
</form>
